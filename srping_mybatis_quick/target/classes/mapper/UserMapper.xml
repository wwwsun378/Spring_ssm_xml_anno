<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yg.dao.UserMapper">

    <sql id="selectall">
        select *
        from user
    </sql>
    <!--删除操作-->
    <delete id="delete" parameterType="int">
        delete
        from user
        where id = #{abc}
    </delete>

    <!--修改操作-->
    <update id="update" parameterType="com.yg.domain.User">
        update user
        set username=#{username},
            password=#{password}
        where id = #{id}
    </update>

    <!--插入操作-->
    <insert id="save" parameterType="user">
        insert into user(id, username, password, birthday)
        values (#{id}, #{username}, #{password}, #{birthday})
    </insert>

    <!--查询操作-->
    <select id="findAll" resultType="user">
        select *
        from user
    </select>

    <!--根据id进行查询-->
    <select id="findById" resultType="user" parameterType="int">
        <include refid="selectall"></include>
        <where>
            id = #{id}
        </where>
    </select>

    <select id="findByCondition" resultType="user" parameterType="user">
        <include refid="selectall"></include>
        <include refid="condition"></include>
    </select>

    <sql id="condition">
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="username !=null and username != ''">
                and username =#{username}
            </if>
            <if test="password !=null and password != ''">
                and password =#{password}
            </if>
        </where>
    </sql>

    <select id="findByUserList" resultType="user" parameterType="list">
        <include refid="selectall"></include>
        <where>
            <foreach collection="list" item="id" open="id in (" close=")" separator="," index="">
                #{id}
            </foreach>
        </where>
    </select>

</mapper>