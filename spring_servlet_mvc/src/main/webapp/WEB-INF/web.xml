<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>spring_servlet_mvc</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- ?? web 应用启动的时候 初始化spring 应用上下文。 -->
<!--    <listener>-->
<!--        <listener-class>com.yg.listener.MyServletContextListener</listener-class>-->
<!--    </listener>-->

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.yg.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/userSave</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>

    </welcome-file-list>

</web-app>
